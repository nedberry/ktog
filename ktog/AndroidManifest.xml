<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nedswebsite.ktog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- NEED THESE TOO? -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ktogicon8a"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat"
        android:largeHeap="true" >
        
        <service
        android:enabled="true" 
        android:name="com.nedswebsite.ktog.Badonk2SoundService" />

        <!-- was using: android:theme="@style/AppTheme" but the above worked -->

        <activity android:name=".Video" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity1"
            android:configChanges="orientation|screenSize" >
            <intent-filter>
                <action android:name="com.nedswebsite.ktog.MAINACTIVITY1" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Rules" >
            <intent-filter>
                <action android:name="com.nedswebsite.ktog.RULES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity2"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.nedswebsite.ktog.MAINACTIVITY2" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
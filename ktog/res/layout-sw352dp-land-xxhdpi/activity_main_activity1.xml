	<ImageButton
	    android:id="@+id/imagebuttononeplayer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_above="@+id/imagebuttonmultiplayer"
	    android:layout_marginBottom="15dp"
	    android:background="@drawable/one_player"
	    android:cropToPadding="false" />
	
	<ImageButton
	    android:id="@+id/imagebuttonmultiplayer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_above="@+id/imagebuttonabout"
	    android:layout_marginBottom="15dp"
	    android:background="@drawable/multi_player"
	    android:cropToPadding="false" />
	
	<ImageButton
	    android:id="@+id/imagebuttonabout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_above="@+id/buttonguys"
	    android:layout_marginBottom="15dp"
	    android:background="@drawable/about"
	    android:cropToPadding="false" />

	<Button
	    android:id="@+id/buttonguys"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/imagebuttonabout"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/roundedbuttonsw360"
	    android:text="Guys"
	    android:textSize="15dp"
	    android:textColor="#000000"
	    android:textStyle="bold" />

	<Button
	    android:id="@+id/buttonrecords"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignRight="@+id/imagebuttonabout"
	    android:background="@drawable/roundedbuttonsw360"
	    android:text="Records"
	    android:textSize="15dp"
	    android:textColor="#000000"
	    android:textStyle="bold" />
    

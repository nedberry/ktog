<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nedswebsite.ktog.MainActivity2"
     >

    <ImageView
        android:id="@+id/imageviewscroll3b5left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/leftscroll"
         />

    <ImageButton
        android:id="@+id/imagebuttontitleblank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_centerHorizontal="true"
        android:alpha="0"
        android:background="@drawable/titleblank"
         />

    <TextView
        android:id="@+id/textviewnameleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imagebuttontitleblank"
        android:gravity="bottom|center"
        android:minHeight="105dp"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
         />

    <ImageView
        android:id="@+id/imageviewscroll3b5right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rightscroll"
         />

    <TextView
        android:id="@+id/textviewnameright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imagebuttontitleblank"
        android:gravity="bottom|center"
        android:minHeight="105dp"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
         />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="594dp"
        android:layout_height="205dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imagebuttontitleblank"
         >

        <ImageView
            android:id="@+id/imageviewavatarright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/computer"
            android:gravity="center"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="593dp"
        android:layout_height="205dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imagebuttontitleblank"
         >

        <ImageView
            android:id="@+id/imageviewavatarleft1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/computer"
            android:gravity="center"
             />

        <ImageView
            android:id="@+id/imageviewavatarleft2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/crossedswords2"
            android:gravity="center"
             />

        <ImageView
            android:id="@+id/imageviewavatarleft3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/stonedead2"
            android:gravity="center"
             />
        
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageviewhitpointsleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textviewhitpointsleft"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="10dp"
        android:background="@drawable/hitpointsrightandleft"
         />

    <ImageView
        android:id="@+id/imageviewhitpointsright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="10dp"
        android:background="@drawable/hitpointsrightandleft"
         />
    
    <TextView
        android:id="@+id/textviewhitpointsleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageviewhitpointsleft"
        android:layout_toLeftOf="@+id/imagebuttontitleblank"
        android:layout_toRightOf="@+id/imageviewcenterscroll"
        android:gravity="center|center"
        android:minHeight="60dp"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
         />
    
    <TextView
        android:id="@+id/textviewhitpointsright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageviewhitpointsright"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageviewhitpointsright"
        android:layout_toLeftOf="@+id/imageviewcenterscroll"
        android:gravity="center|center"
        android:minHeight="60dp"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
         />
    
    
    
    <ImageButton
        android:id="@+id/imagebuttonaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imagebuttonattack"
        android:layout_centerHorizontal="true"
        android:background="@drawable/action"
        android:cropToPadding="false"
         />
    
    <ImageButton
        android:id="@+id/imagebuttonattack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"        
        android:background="@drawable/attack"
        android:cropToPadding="false"        
         /> 
        
    <ImageView
        android:id="@+id/imageviewplayerbox4left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"        
        android:background="@drawable/skillsleft"
         />
    
    <ImageView
        android:id="@+id/imageviewplayerbox4right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/skillsright" />    
        

   	<ImageView
   	    android:id="@+id/imageviewcenterscroll"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_above="@+id/imagebuttonaction"
   	    android:layout_toRightOf="@+id/imageviewscroll3b5left"
   	    android:background="@drawable/centerscroll" />
   	
   	<TextView
        android:id="@+id/textviewcenterscrolltext"
        android:layout_width="340dp"
        android:layout_height="220dp"
        android:layout_alignBottom="@+id/imageviewcenterscroll"
        android:layout_below="@+id/imagebuttontitleblank"
        android:layout_toLeftOf="@+id/imageviewscroll3b5right"
        android:layout_toRightOf="@+id/imageviewscroll3b5left"
        android:fadeScrollbars="false"
        android:gravity="bottom"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:scrollbars="vertical"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />
   	
   	<ImageView
        android:id="@+id/scrollanimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />    
    
   	<ImageView
        android:id="@+id/titleanimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    
   	<ImageView
        android:id="@+id/sixsidedanimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
   	
   	

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenutitle"
    tools:context="com.nedswebsite.ktog.MainActivity1" >

    <ImageView
        android:id="@+id/menu1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
        <!-- CODE NOT USED:
        android:src="@drawable/unpressedoneplayer"
        android:background="@null" -->

	<ImageButton
	    android:id="@+id/imagebuttononeplayer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="235dp"
	    android:background="@drawable/one_player"
	    android:cropToPadding="false" />
	
	<ImageButton
	    android:id="@+id/imagebuttonmultiplayer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="310dp"
	    android:background="@drawable/multi_player"
	    android:cropToPadding="false" />
	
	<ImageButton
	    android:id="@+id/imagebuttonabout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="385dp"
	    android:background="@drawable/about"
	    android:cropToPadding="false" />

	<Button
	    android:id="@+id/buttonguys"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/imagebuttonabout"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/roundedbuttonsw600"
	    android:text="Guys"
	    android:textColor="#000000" />

	<Button
	    android:id="@+id/buttonrecords"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignRight="@+id/imagebuttonabout"
	    android:background="@drawable/roundedbuttonsw600"
	    android:text="Records"
	    android:textColor="#000000" />
    
</RelativeLayout>